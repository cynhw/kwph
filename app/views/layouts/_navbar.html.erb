<div class="contain-to-grid sticky nav-bar">
  <nav class="top-bar" data-topbar role="navigation" data-options="sticky_on: large">
    <ul class="title-area">
      <li class="name">
        <h1 id="brand">translate</h1>
      </li>
    </ul>

    <% if @current_user %>
      <p class="current text-right"><%= @current_user.name %> | <%= session['user_language']['session_language'] %> | <%= link_to "logout", "/logout" %></p>
    <% else %>
      <p class="current text-right"><a href="#" data-reveal-id="myModal">login/signup</a></p>
      <div id="myModal" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
        <%= form_for :user, url: "/login" do |f| %>
          email: <%= f.text_field :email, placeholder: "Enter email" %> <br>
          password: <%= f.password_field :password, placeholder: "Enter password" %> <br>
          <%= f.text_field :session_language, placeholder: "enter language" %><br>
          <%= f.submit "login" %>
        <% end %>

        <%= form_for :user, url: "/users" do |f| %>
          username: <%= f.text_field :name %> <br>
          email: <%= f.text_field :email %> <br>
          password: <%= f.password_field :password %> <br>
          <%= f.text_field :session_language, placeholder: "enter language" %><br>
          <%= f.submit "create account" %>
        <% end %>
        
        <a class="close-reveal-modal" aria-label="Close">&#215;</a>
      </div>
    <% end %>
  </nav>
</div>
