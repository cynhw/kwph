<div class="large-3 columns">

<!-- Link to user's lexicon - will be replaced, but it's handy for now -->
<%= link_to "Lexicon", lexicon_path %>

<!-- List of user's languages -->
<div class="panel content">
  <p class="lead">Learning: </p>
  <!-- key_value[0]: language code (string), key_value[1]: count -->
  <!-- now they're 'w' -->
  <% @word_count_sorted_by_language.each do |w| %>

      <!-- For now, French flag is a placeholder. Will replace with dynamic flag soon. Will replace language code with name. -->
      <p><%= w[1] %> <span class="flag-icon flag-icon-fr"></span> <%= w[0] %></p>
  <% end %>
</div>

<!-- Form to switch current language -->
<div class="panel content">
  <%= form_for :user_language, remote: true, :html=> {:id => "user_language_change"}, url: '/update' do |f| %>
      Select language<%= f.select :session_language, @language_array %>
      <%= f.submit "switch", :class => 'button' %>
  <% end %>
  
</div>
</div>

<!-- Form to parse the text --> 
<div class="large-6 columns">
  <div class="panel content">
		<%= form_for :parse, url: '/parse' do |f| %>
			<%= f.text_area :text, :placeholder => 'Enter text here', :class => 'text_area'%>
			<%= f.hidden_field 'parse_form', :name => 'parse_form' %><br>
			<%= f.submit "Parse", :class => 'button', :id => 'parse'%>
		<% end %>
	</div>
</div>

<!-- Right Sidebar: Recommendations & Languages --> 
<div class="large-3 columns language_dropdown">
  <div class="panel content">
    <p class="lead">Recommended Texts</p>
    <% @link.each do |w| %>
      <!-- <%= w.author %><br>
      <%= w.link %><br>
      <%= w.language %><br>
      <%= w.title %><br>
      <%= w.year %><br> -->
      <%= form_for :text, url: "/parse" do |f| %>
        <%= f.hidden_field :text, :value => w.link %>
        <%= f.hidden_field 'text_form', :name => 'text_form' %>
        <%= f.submit "render text", :class => 'button' %>
      <% end %>
    <% end %>
  </div>
</div>
